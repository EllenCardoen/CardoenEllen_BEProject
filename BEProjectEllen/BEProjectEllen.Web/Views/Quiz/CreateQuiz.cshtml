@model BEProjectEllen.Core.Quiz

@{
    ViewData["Title"] = "CreateQuiz";
}

<div>
    <h1 class="c-title">CreateQuiz</h1>

    <div class="c-form">
        <form asp-action="CreateQuiz">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group c-group-size">
                <label class="control-label">Quiz Name</label>
                <input asp-for="Title" class="form-control form-control-large" placeholder="Quiz name" />

                <span asp-validation-for="Title" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label class="control-label">Difficulty</label>
                <select asp-for="DifficultyId" class="form-control form-control-large" asp-items="ViewBag.DifficultyId"></select>
            </div>

            @for (int i = 0; i < 5; i++)
            {

                <hr class="c-hr" />

                <div class="form-group c-question-score">
                    <label for="question[@i]-title" class="control-label"></label>
                    <input name="Questions[@i].Title" id="question[@i]-title" class="form-control form-control-large" placeholder="QUESTION" />

                    <label for="question[@i]-score" class="control-label"></label>
                    <input name="Questions[@i].Score" id="question[@i]-score" class="form-control c-field-score" placeholder="Question score" />
                </div>

                <div class="form-group">
                    <label for="question[@i]-ImageUrl" class="control-label"></label>
                    <input name="Questions[@i].ImageUrl" id="question[@i]-ImageUrl" class="form-control form-control-large" placeholder="Optional questionUrl" />
                </div>

                @*<div class="form-group">
                    <label for="question[@i]-score" class="control-label">Score for question</label>
                    <input name="Questions[@i].Score" id="question[@i]-score" class="form-control form-control-large" placeholder="Score" />
                </div>*@

                <div class="c-form-choices">
                    @for (int y = 0; y < 4; y++)
                    {
                        <div class="form-group c-form-choices">
                            <label for="questions-@i-choice-@y" class="control-label"></label>
                            <input name="Questions[@i].Choices[@y].Description" id="questions-@i-choice-@y" class="form-control" placeholder="Answer" />
                        </div>
                    }
                </div>

                <div class="c-form-choices">
                    @for (int y = 0; y < 4; y++)
                    {
                        <div class="form-group c-form-choices">
                            <label for="choice-@i-choice-@y" class="control-label"></label>
                            <input name="Questions[@i].Choices[@y].ImageUrl" id="questions-@i-choice-@y" class="form-control" placeholder="Optional ImageUrl" />
                        </div>
                    }
                </div>
            }
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
