@model BEProjectEllen.Core.Quiz

@{
    ViewData["Title"] = "Play";
}

<h1>Play</h1>

<div>
    <h4>Quiz</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Difficulty)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Difficulty.Id)
        </dd>
    </dl>

    <h2>Vragen</h2>

    <div class="c-quiz__vragen">
        @foreach (var question in Model.Questions)
        {
            <div class="c-quiz__vraag">
                <div class="c-quiz__vraag--titel">@question.Title: </div>
                <div>@question.Description</div>
                <div><img class="c-quiz__vraag--img" src="~/images/@question.ImageUrl" alt="afbeelding van @question.Title" /></div>
                <div class="c-quiz__antwoorden">
                    @foreach (var choice in question.Choices)
                    {
                        <input class="c-quiz__radiobtn" type="radio" name="vraag-@question.Id" value="@choice.Id" id="@choice.Id" />
                        <label class="c-quiz__antwoord" for="@choice.Id">
                            <span>@choice.Description</span>
                            @if (choice.ImageUrl != null)
                            {
                                <img class="c-quiz__antwoord-img" src="~/images/@choice.ImageUrl" alt="afbeelding van @choice.Description" />

                            }
                        </label>
                    }
                </div>
            </div>
        }
        <button>Antwoorden indienen</button>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
