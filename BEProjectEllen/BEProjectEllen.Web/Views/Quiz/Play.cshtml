@model BEProjectEllen.Core.Quiz

@{
    ViewData["Title"] = "Play";
}

<div>

    <h1>@Model.Title</h1>

    <form class="c-questions" asp-action="Play" method="post">
        @for (int i = 0; i < Model.Questions.Count; i++)
        {
            var question = Model.Questions.ToList()[i];
      
            <div class="c-question">
                <div class="c-questionTitle">@question.Title</div>
                <div>
                    @if (question.ImageUrl != null)
                    {
                        <img class="c-questionImage" src="~/images/@question.ImageUrl" alt="Image of @question.Title" />
                    }
                </div>
                <div class="c-choices">

                   @foreach (var choice in question.Choices)
                   {
                         <ul>
                            <li>
                                <input type="radio" id="@choice.Id" value="@choice.Id" name="choices[@i]">
                                <label for="@choice.Id">
                                    <span>@choice.Description</span>
                                    @if (choice.ImageUrl != null)
                                    {
                                        <img class="c-choiceImage" src="@choice.ImageUrl" alt="Image of @choice.Description" />
                                    }
                                </label>

                                <div class="check"><div class="inside"></div></div>
                            </li>
                         </ul>
                    }
                </div>
            </div>
        }

        <button type="submit" class="c-submitBtn">Submit</button>
    </form>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
